<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- SQL Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Database Connection Settings -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="show_sql">true</property>
        <property name="hibernate.connection.pool_size">10</property>
        <!--<property name="hibernate.current_session_context_class">thread</property>-->
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="hibernate.cache.use_query_cache">false</property>
        <property name="hibernate.c3p0.max_statements">0</property>
        <!-- Mapping With Model Class Containing Annotations -->
        <mapping class="com.pubvantage.entity.CoreLearningModel"/>
        <mapping class="com.pubvantage.entity.CoreLearner"/>
        <mapping class="com.pubvantage.entity.CoreOptimizationRule"/>
        <mapping class="com.pubvantage.entity.CoreAutoOptimizationConfig"/>
    </session-factory>
</hibernate-configuration>